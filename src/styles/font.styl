
// font-display DOC: https://developer.mozilla.org/zh-cn/docs/Web/CSS/@font-face/font-display

@font-face {
  font-family: SpecialSymbol;
  src: local('PingFang SC'), local('Microsoft Yahei');
  unicode-range: U+02C2, U+02C3, U+003C, U+003E, U+3009;
}

@font-face {
  font-display: swap;
  font-family: Monda;
  src: cdn-url('../assets/fonts/Monda-Regular.ttf');
  unicode-range: U+21-3B,U+3D,U+3F-5F,U+61-7D;
}

@font-face {
  font-display: swap;
  font-family: DINRegular;
  src: cdn-url('../assets/fonts/DIN-Regular.ttf');
  // CSS Unicode Range Generator https://codepen.io/elifitch/pen/Ljqway
  // abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789/.=-;',?!#@$%^&*()_+\|:"[]{}
  unicode-range: U+21-3B,U+3D,U+3F-5F,U+61-7D;
}

@font-face {
  font-display: swap;
  font-family: 'SFMono-Regular';
  src: cdn-url('../assets/fonts/SFMonoRegular.otf') format('opentype');
}

