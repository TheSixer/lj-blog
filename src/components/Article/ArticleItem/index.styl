@import '@/styles/init.styl';

.lj-blog-home-list-article-item
  display block
  position relative
  margin-bottom 12px
  padding 10px 10px 10px 200px
  height 135px
  border-radius 6px
  background-color rgba($white, 0.4)
  transition background 0.4s
  &:hover
    background-color $white
  &-media
    position absolute
    top 10px
    left 10px
    width 180px
    height 115px
    background-color rgba($white, 0.2)
    &-tag
      position absolute
      top 0
      left 0
  &-content
    display flex
    align-items flex-start
    justify-content space-between
    flex-direction column
    height 115px
    &-title
      margin 0
      color rgba($black, 0.8)
      font-size 15px
      font-weight 600
      font-family 'SFMono-Regular',DINRegular,Monda,SpecialSymbol
    &-actions
      display flex
      align-items center
      justify-content space-between
      padding-left 120px
      width 100%
      & > span
        margin-right 10px
        color rgba(0,0,0,.45)
        font-size 12px
        cursor pointer
        transition color .3s
        .comment-action
          padding-left 6px
